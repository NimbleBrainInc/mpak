{
  "name": "@nimblebrain/mpak",
  "version": "0.2.0",
  "description": "CLI for downloading MCPB bundles and Agent Skills from the mpak registry",
  "type": "module",
  "bin": {
    "mpak": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "mcpb",
    "anthropic",
    "cli",
    "package-manager"
  ],
  "author": "NimbleBrain Inc <engineering@mpak.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NimbleBrainInc/mpak.git",
    "directory": "packages/cli"
  },
  "homepage": "https://mpak.dev",
  "bugs": {
    "url": "https://github.com/NimbleBrainInc/mpak/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@nimblebrain/mpak-schemas": "workspace:*",
    "@nimblebrain/mpak-sdk": "workspace:*",
    "archiver": "^7.0.1",
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
