{
  "name": "@nimblebrain/mpak-schemas",
  "version": "0.1.0",
  "description": "Shared Zod schemas and TypeScript types for the mpak registry",
  "author": "NimbleBrain <engineering@mpak.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NimbleBrainInc/mpak.git",
    "directory": "packages/schemas"
  },
  "homepage": "https://mpak.dev",
  "bugs": {
    "url": "https://github.com/NimbleBrainInc/mpak/issues"
  },
  "keywords": [
    "mpak",
    "mcp",
    "schemas",
    "zod",
    "mcpb",
    "model-context-protocol"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
