# Database (required)
DATABASE_URL=postgresql://mpak:mpak@localhost:5432/mpak

# Server
PORT=3200
HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173

# Storage (local for dev, s3 for production)
STORAGE_TYPE=local
STORAGE_PATH=./data/bundles

# S3 settings (if STORAGE_TYPE=s3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# CloudFront (optional, for signed download URLs)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY_PATH=

# Auth (optional for local dev, required for production)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Scanner
SCANNER_ENABLED=false

# OIDC audience for provenance verification (defaults to https://www.mpak.dev)
# OIDC_AUDIENCE=https://mpak.dev

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=

# Limits
MAX_BUNDLE_SIZE_MB=50
