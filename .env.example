# Database
DATABASE_URL=postgresql://mpak:mpak@localhost:5432/mpak

# Storage backend (local, s3, gcs, azure)
STORAGE_BACKEND=local
STORAGE_PATH=./data/bundles

# S3 settings (if STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=mpak-bundles

# GCS settings (if STORAGE_BACKEND=gcs)
GCS_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure settings (if STORAGE_BACKEND=azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=

# Server
PORT=3000
NODE_ENV=development

# Auth (optional)
AUTH_ENABLED=false
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# Scanner
SCANNER_ENABLED=true
SCANNER_AUTO_SCAN=true
