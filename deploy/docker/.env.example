# =============================================================================
# mpak Docker Compose environment variables
# Copy this file to .env and fill in the values.
# =============================================================================

# -- PostgreSQL ---------------------------------------------------------------
POSTGRES_USER=mpak
POSTGRES_PASSWORD=changeme
POSTGRES_DB=mpak

# -- Registry Server ----------------------------------------------------------
NODE_ENV=production
STORAGE_TYPE=s3
STORAGE_PATH=/data/storage

# CORS (comma-separated origins)
CORS_ORIGINS=https://mpak.dev

# -- Clerk Auth ---------------------------------------------------------------
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
VITE_CLERK_PUBLISHABLE_KEY=

# -- S3 Storage ---------------------------------------------------------------
S3_BUCKET=mpak-bundles
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# -- CloudFront (optional, for signed download URLs) -------------------------
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY_BASE64=

# -- Scanner ------------------------------------------------------------------
SCANNER_ENABLED=true
SCANNER_IMAGE=ghcr.io/nimblebraininc/mpak-scanner
SCANNER_IMAGE_TAG=latest
SCANNER_CALLBACK_SECRET=
MAX_BUNDLE_SIZE_MB=50

# -- Web App ------------------------------------------------------------------
VITE_API_URL=https://registry.mpak.dev
